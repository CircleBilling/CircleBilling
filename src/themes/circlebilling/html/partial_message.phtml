{% for label, messages in flashes %}
    {% if messages %}
        <div class="container container-head messages mb-5">
        {% for msg in messages %}
            <div class="alert alert-primary" role="alert">
                <i class="fas fa-exclamation-circle"></i> <strong>{{label}}</strong> {{msg}}
            </div>
        {% endfor %}
        </div>
    {% endif %}
{% endfor %}